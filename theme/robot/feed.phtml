<?= '<?xml version="1.0" ?>' ?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:dc="http://purl.org/dc/elements/1.1/">
<channel>
    <atom:link href="<?= $feed->url ?>" rel="self" type="application/rss+xml" />
    <copyright>Copyright <?= date('Y') ?>, <?= $this->config->name ?></copyright>
    <description><?= $feed->description ?></description>
    <generator>Phun</generator>
    <language>id-id</language>
    
    <lastBuildDate><?= $feed->updated ?></lastBuildDate>
    
    <link><?= $feed->host ?></link>
    <pubDate><?= $feed->updated ?></pubDate>
    <title><?= $feed->title ?></title>
    
    <image>
        <url><?= $this->asset('logo.png'); ?></url>
        <link><?= $feed->host ?></link>
        <title><?= $feed->title ?></title>
        <description><?= $feed->description ?></description>
    </image>
    
    <?php if($pages): ?>
        <?php foreach($pages as $page): ?>
        <item>
            <atom:link href="<?= $feed->url ?>" rel="self" type="application/rss+xml" />
            <?php if(isset($page->author)): ?>
                 <dc:creator><?= $page->author ?></dc:creator>
            <?php endif; ?>
            <?php if(isset($page->categories)): ?>
                <?php foreach($page->categories as $cat): ?>
                    <category><?= $cat ?></category>
                <?php endforeach; ?>
            <?php endif; ?>
            <?php if(isset($page->comment)): ?>
                <comments><?= $page->comment ?></comments>
            <?php endif; ?>
            <description><![CDATA[<?= $page->description ?>]]></description>
            <guid><?= $page->page ?></guid>
            <link><?= $page->page ?></link>
            <pubDate><?= $page->published ?></pubDate>
            <title><?= $page->title ?></title>
        </item>
        <?php endforeach; ?>
    <?php endif; ?>
    
</channel>
</rss>